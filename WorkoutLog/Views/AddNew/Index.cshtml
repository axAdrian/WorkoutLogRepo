@model WorkoutLog.ViewModel.AddNewViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-2.1.4.min.js"></script>
<script src="~/Scripts/jquery-2.1.4.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<br />
<a href="@Url.Action("Add", "AddNew")">
    <button type="button" class="btn btn-default btn-lg">
        Dodaj nowy trening <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
    </button>
</a>
<br />
<br />
<div>
    <table id="example" class="table table-striped table-bordered" cellspacing="0" width="60%">
        <thead>
            <tr>
                <th>Data</th>
                <th>Nazwa</th>
                <th>Opcje</th>
            </tr>
        </thead>
        <script type="text/javascript">
    $(document).ready(function() {
        $('.aaa').click(myFunction);
    });

    function myFunction() {
        $('#detailsPlace').load("@Url.Action("Details" , "AddNew" )");
    }
           
        </script>

        <script type="text/javascript">

        function getView() {

                 $('#divResult').load("@Url.Action("Details" , "AddNew" )");

            }

     </script>
        <tbody>
        @foreach (var trainings in Model.Trainings)
        {
            <tr>
                <td>@trainings.Date</td>
                <td>@trainings.trainingName</td>
                <td>
                    
                    <a href="@Url.Action("Delete", "Collection", new {id = trainings.trainingID})">
                        <button type="button" class="btn btn-default">Usuń <span class="glyphicon glyphicon-remove"></span></button>
                    </a>
                    <button type="button" class="aaa" id="det" >Details</button>
                    <a href='javascript:getView();'>Get Partial View</a>
                </td>



            </tr>
            <tr id="try">
                <div id="detailsPlace"></div>
                <div id='divResult'></div>
</tr>
    

        
    
        }
        </tbody>

    </table>
   
</div>

