@model WorkoutLog.Models.Training

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<a href="@Url.Action("Create", "ExeTrain", new { trainingId = Model.TrainingId })">
    <button type="button" class="btn btn-default btn-lg">
        Dodaj ćwiczenie <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
    </button>
</a>

<div>
    <h4>Training</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TrainingName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TrainingName)
        </dd>
    </dl>

    @foreach (var exeTrain in Model.ExeTrains)
    {
        <p>Cwiczenie:  @exeTrain.Exercise.ExerciseName</p>
        <p>Seria: @exeTrain.Sets Powt: @exeTrain.Rep</p>
    }
</div>
