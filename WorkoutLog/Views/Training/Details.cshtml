@model WorkoutLog.Models.Training

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<a href="@Url.Action("Create", "ExeTrain", new { trainingId = Model.TrainingId })">
    <button type="button" class="btn btn-default btn-lg">
        Dodaj ćwiczenie <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
    </button>
</a>
<br /><br />
<div>

    <table id="example" class="table table-striped table-bordered" cellspacing="0" width="60%">
        <thead>
        <tr>
            <th class="col-md-2">Data treningu</th>
            <th class="col-md-2">Nazwa</th>
        </tr>
        </thead>

        <tbody>
        <tr>
            <td>@Html.DisplayFor(model => model.Date)</td>
            <td>@Html.DisplayFor(model => model.TrainingName)</td>
        </tr>

        </tbody>
    </table>

    <table id="example" class="table table-striped table-bordered" cellspacing="0" width="60%">
        <thead>
            <tr>
                <th>Cwiczenie:</th>
                <th>Ilość serii:</th>
                <th>Ilość powtórzeń:</th>
                <th>Ciężar:</th>
                <th>Opis:</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                @foreach (var exetrain in Model.ExeTrains)
                {
                    <tr>
                        <td>@exetrain.Exercise.ExerciseName</td>                    
                        <td>@exetrain.Sets</td>
                        <td>@exetrain.Rep</td>
                        <td>@exetrain.Weight</td>
                        <td>@exetrain.Info</td>
                    </tr>
                }
            </tr>
        </tbody>
       
    </table>
</div>
<p>
   @* @Html.ActionLink("Edit", "Edit", new { id = Model.TrainingId }) |*@
    @Html.ActionLink("Back to List", "Index")
</p>
