@model System.Collections.Generic.IEnumerable<WorkoutLog.Models.Training>

@{
    ViewBag.Title = "Twoje treningi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-2.1.4.min.js"></script>
<script src="~/Scripts/jquery-2.1.4.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<br />
<a href="@Url.Action("Create", "Training")">
    <button type="button" class="btn btn-default btn-lg">
        Dodaj nowy trening <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
    </button>
</a>
<br />
<br />
<div>
    <table id="example" class="table table-striped table-bordered" cellspacing="0" width="60%">
        <thead>
        <tr>
            <th>Data</th>
            <th>Nazwa</th>
            <th>Opcje</th>
        </tr>
        </thead>


        <tbody>
        @foreach (var trainings in Model)
        {
            <tr>
                <td>@trainings.Date</td>
                <td>@trainings.TrainingName</td>
                <td>

                    <a href="@Url.Action("Delete", "Training", new {id = trainings.TrainingId})">
                        <button type="button" class="btn btn-default">Usuń <span class="glyphicon glyphicon-remove"></span></button>
                    </a>

                    <a href="@Url.Action("Details", "Training", new {id = trainings.TrainingId})">
                        <button type="button" class="btn btn-default">Szczegóły<span class="glyphicon glyphicon"></span></button>
                    </a>
                </td>



            </tr>
            <tr id="try">
                <div id="detailsPlace"></div>           
            </tr>    
        }
        </tbody>

    </table>
   
</div>

